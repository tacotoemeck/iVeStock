<%- include ('../partials/header') %>


<div class="container">
    <div class="jumbotron">
        <h1 style="text-align: center;">Add Stock : </h1>
        <div style="width: 90%; margin: 40px auto;">

            <form action="/stock/<%=stock._id %>/stockUpdate/" method="POST">

                <h5>Container :</h5>

                <% stock.measures.forEach((measure) => { %>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="<%=measure.name%>" name='stock[storingUnit]'
                        id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        <%=measure.name%>
                    </label>
                </div>
                <% }) %>
                <hr class=" my-4">
                <h5>Stock Level in a Container ( from 1 to 10 ) :</h5>

                <div class="form-group">
                    <input class="form-control" type="text" name='stock[volume]'
                        placeholder="use numbers only! - 1 : VERY LOW , 5 - HALF , 10 - FULL" min="0" max="10"
                        step="0.5" value="2">
                </div>
                <h5>Location :</h5>

                <div class="form-group">
                    <input class="form-control" type="text" name='stock[location]' placeholder="Location">
                </div>


                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/stock">Go Back</a>

        </div>
    </div>




    <%- include('../partials/footer') %>