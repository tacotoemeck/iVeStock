<%- include ('../partials/header') %>


<div class="container">
    <div class="jumbotron">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th class="locationTable table-dark table-location-title" colspan="3">
                        ADD NEW STOCK ITEM
                    </th>
                </tr>
            </thead>
        </table>

        <div style="width: 90%; margin: 40px auto;">

            <form action="/stock/<%=stock._id %>/stockUpdate/" method="POST">
                <div class="form-row">
                    <div class="col-md-6">
                        <h5>Container :</h5>

                        <% stock.measures.forEach((measure) => { %>

                        <div class="form-check btn-group btn-group-toggle" data-toggle="buttons"
                            style="padding-left: 0px;">

                            <label class="btn btn-secondary">
                                <input class="form-check-input" type="radio"
                                    value="<%= measure.name + "(kg" + ">" + measure.weight + "<)"%>"
                                    name='stock[storingUnit]'>
                                <%=measure.name%>
                            </label>
                        </div>
                        <% }) %>
                    </div>
                    <div class="col-md-6">
                        <h5>Location :</h5>

                        <div class="form-group" id="chuj">
                            <input class="form-control" type="text" name='stock[location]' placeholder="Location">
                        </div>
                    </div>
                </div>

                <hr class=" my-4">

                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th class="locationTable table-dark table-location-title" colspan="3">
                                LEVEL
                            </th>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <th scope="col" class="stockTHStoring">
                                <div id="progress-bar-div">
                                    <div class="progress" id="progressBar" style="height: 300px;">
                                        <div class="progress-bar progress-bar-striped bg-success progress-bar-animated"
                                            id="progress-display" role="progressbar" style="width: 100%; z-index: -1;"
                                            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <span class="innerVal">10</span>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group slider-wrapper hiddenForms">
                                    <input id="progress-input" class="form-control" type="text" orient="vertical"
                                        name='stock[volume]' min="0" max="10" step="0.5" value="10">
                                </div>


                            </th>

                        </tr>
                    </thead>
                </table>






                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-success submitBtns"
                        style="margin-top: 25px;">Submit!</button>
                </div>
            </form>



            <a href="/stock">Go Back</a>

        </div>
    </div>



    <script src='/JS/progress.js'></script>
    <%- include('../partials/footer') %>