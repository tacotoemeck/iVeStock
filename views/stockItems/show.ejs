<%- include ('../partials/header') %>


<div class="container">
    <div class="jumbotron">
        <h1 style="text-align: center;">Add Stock : </h1>
        <div style="width: 90%; margin: 40px auto;">

            <form action="/stock/<%=stock._id %>/stockUpdate/" method="POST">
                <div class="form-row">
                    <div class="col-md-6">
                        <h5>Container :</h5>

                        <% stock.measures.forEach((measure) => { %>

                        <div class="form-check btn-group btn-group-toggle" data-toggle="buttons"
                            style="padding-left: 0px;">

                            <label class="btn btn-secondary">
                                <input class="form-check-input" type="radio"
                                    value="<%= measure.name + "(kg" + ">" + measure.weight + "<)"%>"
                                    name='stock[storingUnit]'>
                                <%=measure.name%>
                            </label>
                        </div>



                        <% }) %>
                    </div>
                    <div class="col-md-6">
                        <h5>Location :</h5>

                        <div class="form-group" id="chuj">
                            <input class="form-control" type="text" name='stock[location]' placeholder="Location">
                        </div>
                    </div>
                </div>

                <hr class=" my-4">
                <h5 style="">Stock Level in a Container ( from 1 to 10 ) :</h5>


                <div id="progress-bar-div">

                    <progress id="progressBar" value="1" max="1"></progress>


                </div>

                <div class="form-group slider-wrapper">
                    <input id="progress-input" class="form-control" type="text" orient="vertical" name='stock[volume]'
                        min="0" max="10" step="0.5" value="10">
                </div>






                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/stock">Go Back</a>

        </div>
    </div>



    <script src='/JS/progress.js'></script>
    <%- include('../partials/footer') %>