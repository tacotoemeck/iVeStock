<%- include ('../partials/header') %>


<div class="container">
	<div class="jumbotron">
		<h1 style="text-align: center;">Edit <%= stock.name %></h1>
		<div style="width: 90%; margin: 40px auto;">
			<form action="/stock/<%= stock._id %>?_method=PUT" method="POST">
				<h3>Name:</h3>
				<div class="form-group">
					<input class="form-control" type="text" name='stock[name]' value="<%= stock.name %>">
				</div>
				<h3>Choose Category:</h3>
				<div class="form-group">
					<select class="form-control" type="text" name='stock[category]'>
						<option>Cooked</option>
						<option>Fresh</option>
						<option>Packaging</option>
					</select>
				</div>

				<!-- <div class="form-group">
					<input class="form-control" type="text" name='measure' placeholder="Measure (i.e 'container' or 'kg' or 'whoole' etc) "> 
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name='amount' placeholder="Amount (Number) i.e '1' or '6.7'"> 
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/stock">Go Back</a>

		</div>
	</div>




