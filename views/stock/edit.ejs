<%- include ('../partials/header') %>


<div class="container">
	<div class="jumbotron">
		<h1 style="text-align: center;">Edit <%= stock.name %></h1>
		<div style="width: 90%; margin: 40px auto;">
			<form action="/stock/<%= stock._id %>?_method=PUT" method="POST">

				<div class="form-row">
					<div class="col-md-6">
						<table class="table table-borderless">
							<thead>
								<tr>
									<th class="locationTable table-location-title" colspan="3">
										Pick an Icon. It's more fun.
									</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>

										<p class="lead emoji-picker-container">
											<input type="text" class="form-control form-control-lg"
												placeholder="Pick an icon" name="stock[icon]" value="<%=stock.icon%>"
												data-emojiable="true">
										</p>
									</th>
								</tr>
							</tbody>
						</table>

					</div>
					<div class="col-md-6">
						<table class="table table-borderless">
							<thead>
								<tr>
									<th class="locationTable  table-location-title" colspan="3">
										Change name?
									</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>
										<div class="form-group">
											<input class="form-control form-control-lg" type="text" name='stock[name]'
												value="<%= stock.name %>" placeholder="name" required>
										</div>
									</th>
								</tr>
							</tbody>
						</table>

					</div>
				</div>

				<div class="form-row">
					<div class="col-md-6">
						<table class="table table-borderless">
							<thead>
								<tr>
									<th class="locationTable table-location-title" colspan="3">
										Category: <%=stock.category%>
									</th>
								</tr>
							</thead>
						</table>
					</div>
					<div class="col-md-6">
						<table class="table table-borderless">
							<thead>
								<tr>
									<th class="locationTable  table-location-title" colspan="3">
										Measured in: <%=stock.volumeType%>
									</th>
								</tr>
							</thead>

						</table>

					</div>
				</div>




				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/stock">Go Back</a>

		</div>
	</div>




	<%- include('../partials/footer') %>