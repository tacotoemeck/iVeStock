<%- include ('../partials/header') %>


<div class="container">
<div class="jumbotron">
	<h1 style="text-align: center;">Add a New Stock Item</h1>
		<div style="width: 90%; margin: 40px auto;">
			<form action="/stock" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name='name' placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name='measure' placeholder="Measure (i.e 'container' or 'kg' or 'whoole' etc) "> 
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name='amount' placeholder="Amount (Number) i.e '1' or '6.7'"> 
				</div>
				<div class="form-group">
				<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/stock">Go Back</a>

</div>
</div>




