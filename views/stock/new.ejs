<%- include ('../partials/header') %>


<div class="container">
	<div class="jumbotron">
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th class="locationTable table-dark table-location-title" colspan="3">
						ADD NEW STOCK ITEM
					</th>
				</tr>
			</thead>
		</table>
		<div class="form-container">
			<form action="/stock" method="POST">

				<div class="form-row">
					<div class="col-md-6">
						<table class="table table-dark table-striped">
							<thead>
								<tr>
									<th class="locationTable table-dark table-location-title" colspan="3">
										ICON
									</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>

										<p class="lead emoji-picker-container">
											<input type="text" class="form-control form-control-lg"
												placeholder="Pick an icon" name="icon" data-emojiable="true">
										</p>
									</th>
								</tr>
							</tbody>
						</table>

					</div>
					<div class="col-md-6">
						<table class="table table-dark table-striped">
							<thead>
								<tr>
									<th class="locationTable table-dark table-location-title" colspan="3">
										NAME
									</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>
										<div class="form-group">
											<input class="form-control form-control-lg" type="text" name='name'
												placeholder="name">
										</div>
									</th>
								</tr>
							</tbody>
						</table>

					</div>
				</div>


				<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th class="locationTable table-dark table-location-title" colspan="3">
								CATEGORY
							</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th>
								<div class="form-check btn-group btn-group-toggle" data-toggle="buttons"
									style="padding-left: 0px; width: 100%;">
									<label class="btn btn-sq btn-info categoryBtns">
										<input class="form-check-input" type="radio" value="Cooked" name='category'>
										COOKED
									</label>
									<label class="btn btn-sq btn-success categoryBtns">
										<input class="form-check-input" type="radio" value="Fresh" name='category'>
										FRESH
									</label>
									<label class="btn btn-sq btn-secondary categoryBtns">
										<input class="form-check-input categoryBtnsFont" type="radio" value="Packaging"
											name='category'>
										PACKAGING
									</label>
								</div>
							</th>
						</tr>
						<tr>
							<th>

							</th>
						</tr>
					</tbody>
				</table>


				<hr class="my-4">
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/stock">Go Back</a>

		</div>
	</div>




	<%- include('../partials/footer') %>