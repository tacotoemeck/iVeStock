<%- include ('../partials/header') %>

<p style="visibility: hidden; position: absolute;" id="stockID"><%= stock._id %></p>
<div class="container ">
  <div class="jumbotron ">
    <h2 class="display-4 stock-headers archivo"><%= stock.name %><span style="font-size: 10vh"><%= stock.icon %></span>
    </h2>
    <a href="/stock/<%= stock._id %>/stockUpdate/new" class="btn btn-lg btn-success btn-block">ADD
      NEW STOCK</a>


    <%  %>
    <hr class="my-4">
    <table class="table ">
      <thead>
        <tr>
          <th scope="col">

            <% let total = 0; %>
            <% for (let i = 0; i < stock.stockTake.length; i++) { %>

            <%if(stock.stockTake[i].action !== "waste" && stock.stockTake[i].action !== "sold") {%>
            <% total+=Number(stock.stockTake[i].volumeInKg) %>
            <% }; %>
            <% } %>
            <% %>
            <%= total.toFixed(2) %> kg


          </th>

        </tr>
      </thead>

    </table>

    <% locations.forEach(location => { %>

    <table class="table table-responsive">
      <thead>
        <tr>
          <th class="locationTable table-location-title" colspan="3">
            <%=location.toUpperCase() || 'LOCATION UNASSIGNED' %>
          </th>
        </tr>
      </thead>


      <form class="multi-action-form">
        <% stock.stockTake.forEach(collection => { %>

        <% if (location === collection.location && collection.action !== "sold" && collection.action !== "waste") { %>

        <tr>
          <th scope="col" class="stockTHStoring">
            <div class="custom-control custom-checkbox">
              <input class="form-check-input checkedOnes" type="checkbox"
                value='{"id":"<%=collection._id%>", "location":"<%=collection.location%>", "storingUnit":"<%=collection.storingUnit%>", "volume":"<%=collection.volume%>", "volumeInKg":"<%=collection.volumeInKg%>"}'
                style="font-size: 15em;">
              <label class="form-check-label" style="margin-left: 20px;"><%= collection.storingUnit %></label>
            </div>
          </th>
          <th scope="col" class="stockTHWeight">
            <%= Number(collection.volumeInKg).toFixed(2) %>
            kg
          </th>

          <th scope="col" class="currentStockButtons">
            <a href="/stock/<%= stock._id %>/stockUpdate/<%=collection._id%>/edit"
              class=" btn  btn-success updateBtn stock-remove-buttons">UPDATE</a>

            <form action="/stock/<%= stock._id %>/stockUpdate/<%=collection._id%>?_method=PUT" method="POST">


              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[storingUnit]' value='<%= collection.storingUnit%>'>
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[volume]' value='0'>
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[location]' value="<%=collection.location%>">
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[action]' value="sold">
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[changeFromLast]' value="0">
              </div>

              <div class="form-group">
                <button class="btn  btn-warning stock-remove-buttons">MARK AS SOLD</button>
              </div>
            </form>

            <form action="/stock/<%= stock._id %>/stockUpdate/<%=collection._id%>?_method=PUT" method="POST">


              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[storingUnit]' value='<%= collection.storingUnit%>'>
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[volume]' value='0'>
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[location]' value="<%=collection.location%>">
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[action]' value="waste">
              </div>

              <div class="form-group hiddenForms">
                <input class="form-control" type="text" name='stock[changeFromLast]' value="0">
              </div>

              <div class="form-group">
                <button class="btn  btn-danger stock-remove-buttons">MARK AS WASTE</button>
              </div>
            </form>

          </th>
        </tr>
        multi-action-form
        <% } %>

        <% }); %>
        <thead>
          <tr>
            <th scope="col" class="stockTHStoring">
              <div class="dropdown">
                <button class="btn btn-xs btn-secondary dropdown-toggle multiSubmit" type="button"
                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  BULK ACTION
                </button>
                <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                  <li class="dropdown-item"><button class="btn btn-xs btn-danger submitSold" id="">MARK ALL
                      SOLD</button></li>
                  <li class="dropdown-item"><button class="btn btn-xs btn-warning submitWaste" id="">MARK ALL
                      WASTE</button></li>
                  <li class="dropdown-divider"></li>
                  <li class="dropdown-submenu">
                    <a class="dropdown-item" tabindex="-1" href="#">Move location to:</a>
                    <ul class="dropdown-menu">
                      <% locations.forEach(location => { %>
                      <li class="dropdown-item"><button
                          class="btn btn-xs submitLocation"><%=location || 'LOCATION UNASSIGNED' %></button></li>
                      <% }); %>

                    </ul>
                  </li>
                </ul>
              </div>
            </th>
          </tr>
        </thead>
    </table>
    <%}); %>





    <hr class="my-4">
    <hr class="my-4">
    <button class="collapsible btn btn-block btn-warning">ADD/EDIT STORAGE UNITS:</button>
    <div class="contentCollapsible">
      <table class="table ">
        <thead>
          <tr>
            <th scope="col">Storing Unit:</th>
            <th scope="col">Approximate weight:</th>
            <th><a href="/stock/<%= stock._id %>/measures/new" class="btn btn-xs btn-success btn-block" style="">Add
                New</a></th>
          </tr>
        </thead>
        <tbody>
          <% stock.measures.forEach((measure) => { %>
          <tr>
            <th scope="col"> <%= measure.name %> </th>
            <th scope="col"> <%= measure.weight %> </th>
            <th><a href="/stock/<%= stock._id %>/measures/<%= measure._id %>/edit"
                class="btn btn-xs btn-warning btn-block">Edit</a>
              <form action="/stock/<%= stock._id %>/measures/<%= measure._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger btn-block">Delete</button>
              </form>
            </th>
          </tr>

          <% });	%>


        </tbody>
      </table>
    </div>
    <hr class="my-4">
    <a href="<%=/stock/%>" class="btn btn-secondary btn-block">Go Back</a>
  </div>

  <div class="buttons-stock">
    <a href="/stock/<%= stock._id %>/edit" class="btn btn-xs btn-warning"> Edit</a>
    <form action="/stock/<%= stock._id %>?_method=DELETE" method="POST">
      <button class="btn btn-xs btn-danger btn-block">Delete</button>
    </form>
  </div>


</div>


<script src="/JS/forms.js"></script>
<script src="/JS/collapsible.js"></script>
<%- include('../partials/footer') %>